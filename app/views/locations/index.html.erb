<h1 visibility: hidden>Listing locations</h1>

<table class="hide">
  <tr>
    <th>Name</th>
    <th>Address</th>
   <th>Longitude</th>
    <th>Latitude</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.address %></td>
    <td><%= location.longitude %></td>
    <td><%= location.latitude %></td>
    <td><%= location.event %></td>
    <td><%= link_to 'New Location', new_location_path %></td></n>
    <td><%= link_to 'Show', location %></td></n>
    <td><%= link_to 'Edit', edit_location_path(location) %></td></n>
    <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

